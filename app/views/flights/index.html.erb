<h1>Flights Index</h1>
<% @flights.each do |flight| %>
   <div id="flight-<%= flight.id %>">
      <%= flight.number %> 
      <p><%= flight.airline.name%></p>
      <% flight.passengers.each do |passenger| %>
      <p><%= passenger.name %></p> 
      <%= link_to "Remove #{passenger.name}", "flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %>
      <% end %>
   </div>
<% end %>